<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_gravity="top">

        <ImageButton
            android:id="@+id/order_de_back"
            android:layout_width="34dp"
            android:layout_height="43dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:background="@mipmap/left" />
        <TextView
            android:id="@+id/title_page"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="订单详情"
            android:paddingLeft="20dp"
            android:textColor="#6A5ACD"
            android:textSize="20sp"/>
        <ImageButton
            android:id="@+id/order_de_toHome"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@mipmap/home"
            />
        <ImageButton
            android:id="@+id/order_de_notice"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@mipmap/notice"
            />

    </LinearLayout>
    <!--收货地址-->
    <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">
            <TextView
                android:id="@+id/addoder_de_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收 货 人 姓 名："
                android:textSize="18sp" />
            <TextView
                android:id="@+id/addoder_de_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="收 货 电 话 ："
                android:textSize="18sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/addoder_de_adresstatal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收 货 人 地 址："
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/addoder_de_adressdetial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text=""
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
    <!--订单信息-->
    <TextView
        android:id="@+id/order_de_shopname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:visibility="gone"
        android:paddingTop="4dp"
        android:paddingBottom="6dp"
        android:text="店铺名字"
        android:textColor="#404040"
        android:textSize="18sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">


        <ImageView
            android:id="@+id/order_de_img"
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="165dp"
            android:src="@mipmap/ic_launcher_round"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/order_de_goodname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_weight="2"
                android:lines="3"
                android:text="@string/样文"
                android:textColor="#404040"
                android:textSize="16sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/order_de_size"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="押金和型号"
                    android:textColor="#000"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/order_de_price"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="单价和数量"
                    android:textColor="#000"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/order_de_total"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="总价"
                    android:textColor="#000"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/order_de_code"
            android:layout_width="match_parent"
            android:gravity="left"
            android:text="订单编号"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/order_de_sartTime"
            android:layout_width="match_parent"
            android:gravity="left"
            android:text="订单创建时间"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/order_de_finish_Time"
        android:layout_width="match_parent"
        android:gravity="left"
        android:text="订单结束时间"
        android:paddingLeft="15dp"
        android:layout_weight="1"
        android:textColor="#000"
        android:textSize="16sp"
        android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>