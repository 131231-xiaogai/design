<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >
    <!-- 头部 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_gravity="top">

        <ImageButton
            android:id="@+id/sk_select_good_back1"
            android:layout_width="34dp"
            android:layout_height="43dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:background="@mipmap/left" />
        <TextView
            android:id="@+id/title_page"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="查询"
            android:paddingLeft="20dp"
            android:textColor="#6A5ACD"
            android:textSize="20sp"/>
        <ImageButton
            android:id="@+id/sk_select_shop"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:visibility="gone"
            android:background="@mipmap/shop"
            />
        <ImageButton
            android:id="@+id/sk_select_good_notice1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@mipmap/notice"
            />
    </LinearLayout>
    <!--选择搜索条件-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:padding="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="查询方式:"/>
        <TextView
            android:id="@+id/select_good_bygoodname"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/teal"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:textSize="19sp"
            android:gravity="center"
            android:text="商品名称"/>
        <TextView
            android:id="@+id/select_shop_byaddress"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:textColor="@color/teal"
            android:textSize="19sp"
            android:gravity="center"
            android:text="店铺地址"/>
        <TextView
            android:id="@+id/select_shop_byshopname"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:textColor="@color/teal"
            android:layout_weight="1"
            android:textSize="19sp"
            android:gravity="center"
            android:visibility="gone"
            android:text="店铺名称"/>
        <TextView
            android:id="@+id/select_shop_byshopid"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:textColor="@color/teal"
            android:layout_weight="1"
            android:textSize="19sp"
            android:visibility="gone"
            android:gravity="center"
            android:text="店铺编号"/>
    </LinearLayout>
    <!--搜索框商品名称-->
    <LinearLayout
        android:id="@+id/ll_et_goodname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/sk_select_good_find1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/sousuo"/>
        <EditText
            android:id="@+id/input_goodname1"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请输入商品名称"/>
        <TextView
            android:id="@+id/home_good_total1"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <!--搜索框 店铺地址-->
    <LinearLayout
        android:id="@+id/ll_et_shopaddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:padding="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/sk_select_shopaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/sousuo"/>
        <EditText
            android:id="@+id/input_shopaddress"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请输入店铺地址"/>
        <TextView
            android:id="@+id/home_shopaddress"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <!--搜索框 店铺名称-->
    <LinearLayout
        android:id="@+id/ll_et_shopname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:visibility="gone"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/sk_select_shopname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/sousuo"/>
        <EditText
            android:id="@+id/input_shopname"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请输入店铺名称"/>
        <TextView
            android:id="@+id/home_shopname"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <!--搜索框 店铺编号-->
    <LinearLayout
        android:id="@+id/ll_et_shopid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:visibility="gone"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/sk_select_shopid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/sousuo"/>
        <EditText
            android:id="@+id/input_shopid"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请输入店铺编号"/>
        <TextView
            android:id="@+id/home_shopid"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <!--列表-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- 瀑布列表 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/sk_select_good_recycle_view1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
            </androidx.recyclerview.widget.RecyclerView>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/sk_select_shop_recycle_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:padding="10dp">
            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>