<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:paddingLeft="60dp"
    android:paddingRight="60dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            style="@style/list_item_image"
            android:background="@mipmap/icon_activity_image" />
        <ImageView
            style="@style/list_item_image"
            android:background="@mipmap/icon_activity_image"
            android:layout_marginLeft="80dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp">
        <TextView
            style="@style/list_item_text"
            android:text="西装"/>
        <TextView
            style="@style/list_item_text"
            android:text="唐装"
            android:layout_marginLeft="80dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <ImageView
            style="@style/list_item_image"
            android:background="@mipmap/icon_activity_image"
            />
        <ImageView
            style="@style/list_item_image"
            android:background="@mipmap/icon_activity_image"
            android:layout_marginLeft="80dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp">
        <TextView
            style="@style/list_item_text"
            android:text="卡通服" />
        <TextView
            style="@style/list_item_text"
            android:layout_marginLeft="80dp"
            android:text="礼服" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <ImageView
            style="@style/list_item_image"
            android:layout_height="77dp"
            android:background="@mipmap/icon_activity_image" />
        <ImageView
            style="@style/list_item_image"
            android:background="@mipmap/icon_activity_image"
            android:layout_marginLeft="80dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp">
        <TextView
            style="@style/list_item_text"
            android:text="汉服" />
        <TextView
            style="@style/list_item_text"
            android:layout_marginLeft="80dp"
            android:text="首饰"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <ImageView
            style="@style/list_item_image"
            android:background="@mipmap/icon_activity_image" />
        <ImageView
            style="@style/list_item_image"
            android:background="@mipmap/icon_activity_image"
            android:layout_marginLeft="80dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp">
        <TextView
            style="@style/list_item_text"
            android:text="鞋子" />
        <TextView
            style="@style/list_item_text"
            android:layout_marginLeft="80dp"
            android:text="其他"/>

    </LinearLayout>
</LinearLayout>

