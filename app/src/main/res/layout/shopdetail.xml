<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <include layout="@layout/title" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="6dp"
        android:layout_weight="17"
        android:background="#fff"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/me_find_shopname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="   店 铺 名   "
                android:textSize="20sp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">
            <TextView
                style="@style/sk_ui"
                android:layout_weight="1"
                android:layout_marginLeft="2dp"
                android:text="用户编号：" />
            <TextView
                android:id="@+id/find_shop_username"
                style="@style/sk_ui"
                android:layout_weight="3"
                android:text="" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">
            <TextView
                style="@style/sk_ui"
                android:layout_weight="1"
                android:layout_marginLeft="2dp"
                android:text="电   话：" />
            <TextView
                android:id="@+id/find_shop_phone"
                style="@style/sk_ui"
                android:layout_weight="3"
                android:text="" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                style="@style/sk_ui"
                android:layout_weight="1"
                android:layout_marginLeft="2dp"
                android:text="地   址：" />
            <TextView
                android:id="@+id/find_shop_address"
                style="@style/sk_ui"
                android:layout_weight="3"
                android:text="" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">
            <TextView
                style="@style/sk_ui"
                android:layout_weight="1"
                android:layout_marginLeft="2dp"
                android:text="评   分：" />
            <TextView
                android:id="@+id/find_shop_sorc"
                style="@style/sk_ui"
                android:layout_weight="3"
                android:text="0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">
            <TextView
                style="@style/sk_ui"
                android:layout_weight="1"
                android:layout_marginLeft="2dp"
                android:text="注册时间：" />
            <TextView
                android:id="@+id/find_shop_register_time"
                style="@style/sk_ui"
                android:layout_weight="2.2"
                android:text="" />


        </LinearLayout>



        </LinearLayout>
    </LinearLayout>

