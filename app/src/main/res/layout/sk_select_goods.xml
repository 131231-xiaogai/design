<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >
    <!-- 头部 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_gravity="top">

        <ImageButton
            android:id="@+id/sk_select_good_back"
            android:layout_width="34dp"
            android:layout_height="43dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:background="@mipmap/left" />
        <TextView
            android:id="@+id/title_page"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="查询"
            android:paddingLeft="20dp"
            android:textColor="#6A5ACD"
            android:textSize="20sp"/>
        <ImageButton
            android:id="@+id/sk_select_shop"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:visibility="gone"
            android:background="@mipmap/shop"
            />
        <ImageButton
            android:id="@+id/sk_select_good_notice"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@mipmap/notice"
            />
    </LinearLayout>
    <!--搜索框商品名称-->
    <LinearLayout
        android:id="@+id/ll_et_goodname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/sk_select_good_find"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/sousuo"/>
        <EditText
            android:id="@+id/input_goodname"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请输入商品名称"/>
        <TextView
            android:id="@+id/home_good_total"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <!--列表-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- 瀑布列表 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/sk_select_good_recycle_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>