<?xml version="1.0" encoding="utf-8"?>

<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#d3d3d3">
    <!-- 顶部 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <include layout="@layout/title" />
    </LinearLayout>
    <!-- 主体窗口-->
    <LinearLayout
        android:id="@+id/body1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_weight="17">
        <!-- 管 理 员-->
        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#fff">
            <TextView
                android:id="@+id/Ad_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Administrators"
                android:textSize="22sp" />
        </LinearLayout>
        <!--part2-->
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#fff"
            android:orientation="vertical"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginTop="6dp"
            android:padding="3dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textSize="19sp"
                android:text="   顾 客 管 理   "
                android:background="@drawable/button_bg"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="center">
                <TextView
                    android:id="@+id/adm_allUsser"
                    style="@style/sk_ui"
                    android:text="查 看 顾 客"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/adm_deletedUser"
                    style="@style/sk_ui"
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="注 销 顾 客" />


            </LinearLayout>
            <TextView
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:background="@drawable/line"/>


        </LinearLayout>
        <!--part3-->
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#fff"
            android:orientation="vertical"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginTop="6dp"
            android:padding="3dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textSize="19sp"
                android:text="   商 家 管 理   "
                android:background="@drawable/button_bg"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="center">
                <TextView
                    android:id="@+id/adm_allShopkeeper"
                    style="@style/sk_ui"
                    android:text="查 看 商 家"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/adm_deletedShopkeeper"
                    style="@style/sk_ui"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:text="注 销 商 家" />
            </LinearLayout>
            <TextView
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:background="@drawable/line"/>
        </LinearLayout>
        <!--通 知 管 理-->
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#fff"
            android:orientation="vertical"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginTop="6dp"
            android:padding="3dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textSize="19sp"
                android:text="   通 知 管 理   "
                android:background="@drawable/button_bg"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="center">
                <TextView
                    style="@style/sk_ui"
                    android:text="发 送 通 知"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    />
                <TextView

                    style="@style/sk_ui"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:text="删 除 通 知" />
            </LinearLayout>
            <TextView
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:background="@drawable/line"/>
        </LinearLayout>
        <!--活动管理-->
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#fff"
            android:orientation="vertical"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginTop="6dp"
            android:padding="3dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textSize="19sp"
                android:text="  活 动 管 理   "
                android:background="@drawable/button_bg"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="center">
                <TextView

                    style="@style/sk_ui"
                    android:text="发 布 活 动"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    />
                <TextView

                    style="@style/sk_ui"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:text="注 销 活 动" />
            </LinearLayout>
            <TextView
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:background="@drawable/line"/>
        </LinearLayout>
        <!--评 论 管 理-->
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#fff"
            android:orientation="vertical"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginTop="6dp"
            android:padding="3dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textSize="19sp"
                android:text="   评 论 管 理   "
                android:background="@drawable/button_bg"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="center">
                <TextView

                    style="@style/sk_ui"
                    android:text="审 核 评 论"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    />
                <TextView

                    style="@style/sk_ui"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:text="删 除 评 论" />
            </LinearLayout>
            <TextView
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:background="@drawable/line"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>






