<?xml version="1.0" encoding="utf-8"?>

<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#d3d3d3">
    <!-- 顶部 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <include layout="@layout/title" />
    </LinearLayout>
    <!-- 主体窗口-->
    <LinearLayout
        android:id="@+id/body1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_weight="17">
        <!-- part1-->
        <LinearLayout
            android:id="@+id/usercard"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#fff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一号店"
                android:textSize="22sp" />



        </LinearLayout>
        <!--part2-->
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#fff"
            android:orientation="vertical"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginTop="6dp"
            android:padding="3dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textSize="19sp"
                android:text="   订 单 管 理   "
                android:background="@drawable/button_bg"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="center">
                <TextView
                    style="@style/sk_ui"
                    android:text="付"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    />
                <TextView
                    style="@style/sk_ui"
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="发" />
                <TextView

                    style="@style/sk_ui"
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="30dp"
                    android:text="收"
                    />

            </LinearLayout>
            <TextView
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:background="@drawable/line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_marginLeft="28dp"
                    android:textSize="19sp"
                    android:text=" 1 "
                    android:background="#fff"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:textSize="19sp"
                    android:gravity="center"
                    android:text=" 2 "
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:textSize="19sp"
                    android:text=" 3 "
                    android:layout_marginRight="28dp"
                    android:background="#fff"/>
            </LinearLayout>

        </LinearLayout>
        <!--part3-->
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#fff"
            android:orientation="vertical"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginTop="6dp"
            android:padding="3dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textSize="19sp"
                android:text="   商 品 管 理   "
                android:background="@drawable/button_bg"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="center">
                <TextView
                    android:id="@+id/k_add"
                    style="@style/sk_ui"
                    android:text="商 品 上 架"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/k_delete"
                    style="@style/sk_ui"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:text="商 品 下 架" />
            </LinearLayout>
            <TextView
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:background="@drawable/line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="center">
                <TextView
                    android:id="@+id/k_change"
                    style="@style/sk_ui"
                    android:text="修 改 商 品"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/k_select"
                    style="@style/sk_ui"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:text="查 询 商 品" />


            </LinearLayout>
        </LinearLayout>
        <!--part4-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="6dp"
            android:layout_weight="3"
            android:background="#fff"
            android:orientation="vertical"
            android:padding="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="   店 铺 管 理   "
                android:background="@drawable/button_bg"
                android:textSize="19sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

                <TextView
                    style="@style/sk_ui"
                    android:layout_weight="1"
                    android:layout_marginLeft="2dp"
                    android:text="地   址：" />
                <TextView
                    style="@style/sk_ui"
                    android:layout_weight="3"
                    android:text="福州市闽侯县上街镇平安路3号" />


            </LinearLayout>
            <TextView
                android:layout_width="356dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:background="@drawable/line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">
                <TextView
                    style="@style/sk_ui"
                    android:layout_weight="1"
                    android:layout_marginLeft="2dp"
                    android:text="评   分：" />
                <TextView
                    style="@style/sk_ui"
                    android:layout_weight="3"
                    android:text="0" />
            </LinearLayout>
            <TextView
                android:layout_width="356dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:background="@drawable/line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">
                <TextView
                    style="@style/sk_ui"
                    android:layout_weight="1"
                    android:layout_marginLeft="2dp"
                    android:text="注册时间：" />
                <TextView
                    style="@style/sk_ui"
                    android:layout_weight="2.2"
                    android:text="2020-02-11 19:57:26" />


            </LinearLayout>
        </LinearLayout>



    </LinearLayout>

</LinearLayout>






