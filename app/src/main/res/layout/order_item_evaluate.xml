<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/order_tui_img"
            android:padding="15dp"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="165dp"
            android:src="@mipmap/ic_launcher_round"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/order_tui_goodname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="5"
                android:text="@string/样文"
                android:textColor="#404040"
                android:textSize="16sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/order_tui_price"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="￥0.0"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/order_tui_goodNumber"
                    android:layout_width="60dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="111111"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/order_tui_total"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="￥0.0"
                    android:textColor="#000"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/order_status4"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="点击评分:"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/evaluate1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/button_bg3"
            android:gravity="center"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="     1     "/>
        <TextView
            android:id="@+id/evaluate2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/button_bg3"
            android:gravity="center"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="     2     "/>
        <TextView
            android:id="@+id/evaluate3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/button_bg3"
            android:gravity="center"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="     3     "/>
        <TextView
            android:id="@+id/evaluate4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/button_bg3"
            android:gravity="center"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="     4     "/>
        <TextView
            android:id="@+id/evaluate5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/button_bg3"
            android:gravity="center"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:text="     5     "/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="#22000000" />

</LinearLayout>