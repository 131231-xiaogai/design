<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.1"
        android:orientation="horizontal"
       >
        <ImageButton
            android:id="@+id/adm_d_back"
            android:layout_width="34dp"
            android:layout_height="43dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:onClick="finish_reback"
            android:background="@mipmap/left" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="删 除 页 面"
            android:textColor="#6A5ACD"
            android:textSize="26sp"/>
        <ImageButton
            android:id="@+id/adm_d_deleted"
            android:layout_width="27dp"
            android:layout_height="36dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="8dp"
            android:padding="5dp"
            android:background="@mipmap/deleted"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="16"
        android:orientation="vertical"
        android:padding="25dp">

        <TextView
            android:id="@+id/adm_d_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="编 号"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用 户 名 ："
                android:textSize="18sp" />

            <TextView
                android:id="@+id/adm_d_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 你好用户"
                android:textSize="18sp" />
        </LinearLayout>
        <!---->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="手 机 号 ："
                android:textSize="18sp" />

            <TextView
                android:id="@+id/adm_d_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11111111111："
                android:textSize="18sp" />
        </LinearLayout>
        <!---->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="身 份 证 号 ："
                android:textSize="18sp" />

            <TextView
                android:id="@+id/adm_d_IDnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123456749871498 ："
                android:textSize="18sp" />
        </LinearLayout>
        <!---->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="性 别 :"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/adm_d_sex"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="女"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="余 额 :"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/adm_d_balance"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="0.0"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>




    <!--底部按钮-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1.2"
        android:gravity="center"
        android:padding="5dp">

    </LinearLayout>

</LinearLayout>